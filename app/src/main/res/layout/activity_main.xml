<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="String Flow"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#f76c50"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live Wallpaper"
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginBottom="40dp"/>

    <!-- Set Wallpaper Button -->
    <Button
        android:id="@+id/btnSetLiveWallpaper"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="SET LIVE WALLPAPER"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <!-- Advanced Settings -->
    <Button
        android:id="@+id/advSettingButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Advanced Settings"
        android:layout_marginBottom="8dp"/>

    <!-- More Options -->
    <Button
        android:id="@+id/moreOptionButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="More Options"
        android:layout_marginBottom="32dp"/>

    <!-- Banner Ad (Small & Unobtrusive) -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3943295901936127/7983603279" />

</LinearLayout>